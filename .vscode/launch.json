{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Launch built-in server and Debug",
            "type": "php",
            "request": "launch",
            "noDebug": false,
            "runtimeArgs": [
                "-S",
                "localhost:8000",
                "-t",
                "."
            ],
            "cwd": "${workspaceRoot}/.",
            "serverReadyAction": {
                "pattern": "Development Server \\(http://localhost:8000\\) started",
                "action": "openExternally",
                "uriFormat": "http://localhost:8000/auth/login.php"
            }
        }
    ]
}
